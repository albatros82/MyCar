<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:showIn="@layout/app_bar_home">

    <TextView

        android:id="@+id/slogan"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Выберите нужную категорию"
        android:textColor="#6C757D"
        android:textSize="24sp"
        tools:ignore="HardcodedText" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slogan"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/dump_truck"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_design_yel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/sam"
                android:layout_marginStart="10dp"

                tools:ignore="ContentDescription" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginEnd="70dp"
                android:text="Самосвалы"
                android:textColor="#6C757D"
                android:textSize="26sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/bulldozer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginRight="20dp"
            android:background="@drawable/input_design_yel"
            android:orientation="horizontal">

            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/buld"
                tools:ignore="ContentDescription" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="60dp"
                android:gravity="center"
                android:text="Бульдозеры"
                android:textColor="#6C757D"
                android:textSize="26sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/excavator"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_design_yel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:layout_marginStart="10dp"
                android:src="@drawable/exc"
                tools:ignore="ContentDescription" />

            <TextView

                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginEnd="50dp"
                android:text="Экскаваторы"
                android:textColor="#6C757D"
                android:textSize="26sp"
                tools:ignore="HardcodedText" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/truck_crane"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_design_yel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/kran"
                android:layout_marginStart="10dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginEnd="70dp"
                android:text="Строителные краны"
                android:textColor="#6C757D"
                android:textSize="26sp"
                tools:ignore="HardcodedText"
                />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/truck_loader"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="15dp"
            android:background="@drawable/input_design_yel"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            >

            <ImageView

                android:layout_width="70dp"
                android:layout_height="70dp"
                android:src="@drawable/pog"
                android:layout_marginStart="10dp"
                tools:ignore="ContentDescription" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:layout_marginEnd="70dp"
                android:text="Погрузчики"
                android:textColor="#6C757D"
                android:textSize="26sp"
                tools:ignore="HardcodedText"
                />
        </LinearLayout>


    </LinearLayout>

</RelativeLayout>