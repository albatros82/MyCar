<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.LoginActivity">



    <ImageView
        android:id="@+id/app_logo_auth"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/logo_auth"

        tools:ignore="ContentDescription"
    />

    <EditText
        android:id="@+id/login_phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/app_logo_auth"
        android:background="@drawable/input_design"
        android:padding="20dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:hint="Номер телефона"
        android:inputType="number"
        android:textColorHint="@color/grey_my"
        android:textColor="@color/grey_my"
        android:textSize="20sp"
        android:textStyle="bold"
        tools:ignore="Autofill,HardcodedText,TextFields"
    />

    <EditText
        android:id="@+id/login_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_phone_input"
        android:background="@drawable/input_design"
        android:padding="20dp"

        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        android:hint="Пароль"
        android:inputType="textPassword"
        android:textColorHint="@color/grey_my"
        android:textColor="@color/grey_my"
        android:textSize="20sp"
        android:textStyle="bold"

        tools:ignore="Autofill,HardcodedText,TextFields"
    />

    <LinearLayout
        android:id="@+id/linear_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/login_password_input">



        <com.rey.material.widget.CheckBox
            android:id="@+id/login_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/Material.Drawable.CheckBox"
            android:text="Запомнить меня"
            android:textColor="@color/black"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:textStyle=""
            android:textAllCaps="false"
            android:layout_marginStart="25dp"
            tools:ignore="HardcodedText" />

        <TextView
            android:id="@+id/forget_password_link"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Забыли пароль"
            android:textColor="#1874E0"
            android:textSize="16sp"
            android:layout_marginStart="55dp"
            tools:ignore="HardcodedText" />
    </LinearLayout>


    <TextView
        android:id="@+id/admin_panel_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_check"
        android:layout_marginTop="20dp"

        android:text="Администратор"
        android:textColor="#1874E0"
        android:textSize="18sp"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="25dp"
        tools:ignore="HardcodedText" />

    <TextView
        android:id="@+id/not_admin_panel_link"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/linear_check"
        android:layout_marginTop="20dp"

        android:text="Клиент"
        android:textColor="#1874E0"
        android:textSize="18sp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="25dp"
        android:visibility="invisible"
        tools:ignore="HardcodedText"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/admin_panel_link"

        android:layout_marginLeft="20dp"
        android:layout_marginTop="30dp"
        android:layout_marginRight="20dp"

        android:background="@drawable/btn_blue"
        android:padding="10dp"
        android:text="Войти"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="26sp"

        tools:ignore="HardcodedText" />




</RelativeLayout>